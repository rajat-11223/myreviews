
<h1>Master Categories</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @master_categories.each do |master_category| %>
      <tr>
        <td><%= link_to 'Show', master_category %></td>
        <td><%= link_to 'Edit', edit_master_category_path(master_category) %></td>
        <td><%= link_to 'Destroy', master_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Master Category', new_master_category_path %>
