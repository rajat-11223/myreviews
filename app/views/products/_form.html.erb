
<div class="container" style="margin-top: 10%;">
<div class="row">
<div class="col-md-3">
</div>
<div class="col-md-6 card card-body bg_primry">



<%= form_with(model: product, local: true) do |f| %>
   <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="form-group">
   <label for="exampleInputEmail1">Name</label>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control",required: "true" %>
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Description</label><br />
    <%= f.text_field :description, autocomplete: "title", class: "form-control",required: "true" %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <%= f.label :master_category_id %><br />
    <%= f.collection_select :master_category_id,@category, :id,:name,{ :prompt => 'Select Category' },{ class: "form-control add_city"} %>
  </div>
   <div class="form-group">
    <%= f.label :image %><br />
    <%= f.file_field :image, autocomplete: "image", class: "form-control",required: "true" %>
  </div>


<div class="row">
  <div class="col-md-6">
      
        <%= f.submit "Add Product" ,:class => "btn btn-primary" %>
      
  </div>
  
</div>
<% end %>

<%#= render "devise/shared/links" %>

</div>
<div class="col-md-3">
</div>
</div>
</div>


