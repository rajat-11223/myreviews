<p id="notice"><%= notice %></p>

<h1>Post Reviews</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_reviews.each do |post_review| %>
      <tr>
        <td><%= link_to 'Show', post_review %></td>
        <td><%= link_to 'Edit', edit_post_review_path(post_review) %></td>
        <td><%= link_to 'Destroy', post_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post Review', new_post_review_path %>
